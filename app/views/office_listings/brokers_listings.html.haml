#listings-holder 
  .row
    -if current_broker
      -@listings.each do |listing|
        .large-4.small-12.columns
          .favorite-box
            %ul.grid.cs-style-2
              %figure
                -if listing.images.first.link_image
                  -if listing.images.first.link_image.include? "http"
                    =image_tag "#{listing.images.first.link_image}"
                  -elsif listing.images.first.image.model[:image]
                    =image_tag "#{listing.images.first.image.model[:image]}"
                  -else 
                    =image_tag "http://www.cleaningforlondon.com/Portals/0/FlexibleOfficeSpace.jpg", class: "no-image"
                  %figcaption
                    %h3
                    %span  
                    / %a{:href => "#", :"data-reveal-id" => "viewings-dates-box", :remote => true, :controller => "viewings", :action => ""}
                    %a{class: "broker-showing-form button", "data-reveal-id" => "showings-box", :"data-id" => listing.id}
                      Add a Showing 

  #showings-box.reveal-modal
    %a.close-reveal-modal Ã—
    %h3 Create a showing:
    =form_for @viewing do |f|
      =f.label :start_time
      =f.time_select :start_time
      =f.label :end_time
      =f.time_select :end_time
      =f.label :date
      =f.date_select :date
      =f.text_field :office_listing_id, class: "hidden"
      =f.submit "Create Showing"






