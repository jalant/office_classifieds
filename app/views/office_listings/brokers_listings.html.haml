#listings-holder 
  .row
    -if current_broker
      -@listings.each do |listing|
        .large-4.small-12.columns
          .favorite-box
            %ul.grid.cs-style-2
              %figure
                -if listing.images.first.link_image
                  =image_tag "#{listing.images.first.link_image}"
                -elsif listing.images.first.image.class == OfficeImagesUploader
                  =image_tag "#{listing.images.first.image}"
                -else 
                  =image_tag "http://www.cleaningforlondon.com/Portals/0/FlexibleOfficeSpace.jpg", class: "no-image"

                %figcaption
                  %h3
                  %span  
                  / %a{:href => "#", :"data-reveal-id" => "viewings-dates-box", :remote => true, :controller => "viewings", :action => ""}
                  %a{class: "showing button", "data-reveal-id" => "viewings-dates-box", :"data-id" => listing.id}
                    Add a Showing 

