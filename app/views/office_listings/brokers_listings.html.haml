#listings-holder 
  .row
    -if current_broker
      -@listings.each do |listing|
        .large-4.small-12.columns
          %ul.grid.cs-style-2
            %figure
              -if listing.images.first.link_image
                -if listing.images.first.link_image.include? "http"
                  =image_tag "#{listing.images.first.link_image}"
                -elsif listing.images.first.image.model[:image]
                  =image_tag "#{listing.images.first.image.model[:image]}"
                -else 
                  =image_tag "http://www.cleaningforlondon.com/Portals/0/FlexibleOfficeSpace.jpg", class: "no-image"
                %figcaption
                  %h3
                  %span  
                  %a{class: "broker-showing-form button", "data-reveal-id" => "showings-box", :"data-id" => listing.id} Add a Showing 

#showings-box.reveal-modal
