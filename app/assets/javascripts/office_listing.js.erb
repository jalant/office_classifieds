

var office_map = {
	map: null,

	display_map: function(lat, lng){
		var mapOptions = {
			center:	new google.maps.LatLng(lat, lng),
			zoom: 15,
			mapTypeId: google.maps.MapTypeId.ROADMAP
		};

		var canvas=$('#map-canvas')[0];
		office_map.map =	new google.maps.Map(canvas, mapOptions);
	},

	add_marker: function(lat, lng, location){
		var latlng = new google.maps.LatLng(lat, lng);
		var marker = new google.maps.Marker({
			position: latlng,
			map: office_map.map,
			icon: "http://mapicons.nicolasmollet.com/wp-content/uploads/mapicons/shape-default/color-3875d7/shapecolor-light/shadow-1/border-white/symbolstyle-dark/symbolshadowstyle-no/gradient-no/office-building.png",
			title: location
		});
